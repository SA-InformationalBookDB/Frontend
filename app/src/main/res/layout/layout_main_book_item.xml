<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:layout_margin="10dp">

    <ImageView
            android:id="@+id/iv_main_book_item"
            android:layout_width="80dp" android:layout_height="80dp"
            android:src="@drawable/ic_book_image_url"
    />

    <TextView
            android:id="@+id/tv_main_book_item"
            android:layout_width="80dp" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_main_book_item"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="The Lord of The Rings"/>

</androidx.constraintlayout.widget.ConstraintLayout>